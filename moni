SELECT * FROM `monitoring`, pairs, individuals WHERE id_monitoring = 2 AND pairs.pair_id = monitoring.pair_id AND (individuals.id_individual = pairs.male_individual1  OR individuals.id_individual = pairs.male_individual2  OR individuals.id_individual = pairs.male_individual3 OR individuals.id_individual = pairs.female_individual1  OR individuals.id_individual = pairs.female_individual2  OR individuals.id_individual = pairs.female_individual3);